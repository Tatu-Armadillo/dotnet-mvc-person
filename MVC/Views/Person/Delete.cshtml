@model MVC.Models.Person;

@{
    ViewData["Title"] = "Delete Person";
}

<form asp-action="Delete" asp-area="Person" method="post">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div class="input-group mb-3">
            <label class="input-group-text">First Name:</label>
            <input asp-for="FirstName" disabled class="form-control" type="text" placeholder="First Name" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Last Name:</label>
            <input asp-for="LastName" disabled class="form-control" type="text" placeholder="Last Name" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Address:</label>
            <input asp-for="Address" disabled class="form-control" type="text" placeholder="Address" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Gender:</label>
            <input asp-for="Gender" disabled class="form-control" type="text" placeholder="Gender" />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-6 d-flex justify-content-end">
            <button type="submit" class="btn btn-danger">Delete Person</button>
        </div>
        <div class="col-6 d-flex justify-content-start">
            <a asp-action="Index" asp-controller="Person" class="btn btn-primary">Retornar</a>
        </div>
    </div>
</form>