@model List<MVC.Models.Person>;
@{
    ViewData["Title"] = "View Person";
}

<div class="d-flex justify-content-between">
    <div class="col-9">
        <h2>Retornar Pessoas</h2>
    </div>
    <div class="col-3 d-flex align-items-center justify-content-center">
        <a asp-action="Create" asp-controller="Person" class="btn btn-success">Create</a>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center">
    <table class="table text-center">
        <thead>
            <td>Id</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>Gender</td>
            <td>Actions</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Address</td>
                    <td>@item.Gender</td>
                    @* <td>@Html.DisplayFor(model => model.Id)</td>
                        <td>@Html.DisplayFor(model => model.FirstName)</td>
                        <td>@Html.DisplayFor(model => model.LastName)</td>
                        <td>@Html.DisplayFor(model => model.Address)</td>
                        <td>@Html.DisplayFor(model => model.Gender)</td> *@
                    <td>
                        <div class="d-flex justify-content-around">
                            <a asp-action="Edit" asp-controller="Person" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-controller="Person" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>